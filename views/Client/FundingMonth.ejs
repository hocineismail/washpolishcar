    <!-- Right side column. Contains the navbar and content of the page -->
    <div class="content-wrapper" >
        <!-- Content Header (Page header) -->
        <section class="content-header"  style=" font-family: 'Cairo', sans-serif;"> 
          <h1  style=" font-family: 'Cairo', sans-serif; text-align: center;">
              صفحة الاحصاء         
          </h1>
     
        </section>

        <!-- Main content -->
        <section class="content">
       
          <div class="row" style="direction: ltr">
           
            <div class="col-md-6">
              <!-- LINE CHART -->
             
              <!-- BAR CHART -->
              <div class="box box-success">
                <div class="box-header">
                    <h5   style="text-align: center; font-family: 'Cairo', sans-serif;">الاحصاء حسب الاعوام</h5>
                </div>
                <div class="box-body chart-responsive">
                  <div class="chart" id="bar-chart" style="height: 300px;"></div>
                </div><!-- /.box-body -->
              </div><!-- /.box -->

            </div><!-- /.col (RIGHT) -->

            <div class="col-md-6">
                <!-- LINE CHART -->
               
                <!-- BAR CHART -->
                <div class="box box-success">
                  <div class="box-header">
                    <h5   style="text-align: center;font-family: 'Cairo', sans-serif;">الاحصاء حسب الاشهر لعام <%= months.Year%></h5>
                  </div>
                  <div class="box-body chart-responsive">
                      <div style="overflow-x:auto; direction: rtl; " >
                          <table   >
                            <tr>
                              <th>الشهر</th>
                              <th>المدخول المالي</th> 
                              <th> المخروج المالي</th>
                              <th>  الفوائد</th>
                              <th>  رابط الصفحة</th>
                            </tr>
                            <% var monthInArabic  %>
                            <% for (var i = 0 ; i < months.month.length ; i++) { %>
                              <% if (months.month[i].Month === 1 ) { %>

                                <% monthInArabic = "جانفي" %>
        
                              <% } %>
        
                              <% if (months.month[i].Month === 2 ) { %>
                                <% monthInArabic = "فيفري" %>
                              <% } %>
        
                         
                              <% if (months.month[i].Month === 3 ) { %>
                                <% monthInArabic = "مارس" %>
                              <% } %>
        
                              <% if (months.month[i].Month === 4 ) { %>
                                <% monthInArabic = "أفريل" %>
                              <% } %>
        
                              <% if (months.month[i].Month === 5 ) { %>
                                <% monthInArabic = "ماي" %>
                              <% } %>
        
        
                              <% if (months.month[i].Month === 6 ) { %>
                                <% monthInArabic = "جوان"%>
                              <% } %>
        
                              <% if (months.month[i].Month === 7 ) { %>
                                <% monthInArabic = "جويلية" %>
                              <% } %>
        
                              <% if (months.month[i].Month === 8 ) { %>
                                <% monthInArabic = "أوت" %>
                              <% } %>
        
                              <% if (months.month[i].Month === 9 ) { %>
                                <% monthInArabic =  "سبتمبر"	%>
                              <% } %>
                              
                              <% if (months.month[i].Month === 10 ) { %>
                                <% monthInArabic = 	"أكتوبر" %>
                              <% } %>
        
                              <% if (months.month[i].Month === 11 ) { %>
                                <% monthInArabic = 	"نوفمبر" %>
                              <% } %>
                              
                              <% if (months.month[i].Month === 12 ) { %>
                                <% monthInArabic = 		"ديسمبر" %>
                              <% } %>
        
                            <tr >  
                              <td> <%= monthInArabic %></td>
                              <td> <%= months.month[i].FinancialIncomeMonth.toFixed(2) %></td>
                              <td> <%= months.month[i].FinancialExitMonth.toFixed(2) %></td>
                              <% var Def =  months.month[i].FinancialIncomeMonth  - months.month[i].FinancialExitMonth  %>
                              <td> <%= Def.toFixed(2) %></td>
                              <td><button class="btn btn-primary" type="button" onclick="window.location.href='#'"> الرابط</button></td>
  
                            </tr>
                            <% } %>
                          </table>
                        </div>
                  </div><!-- /.box-body -->
                </div><!-- /.box -->
  
              </div><!-- /.col (RIGHT) -->
            
          </div><!-- /.row -->

        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
