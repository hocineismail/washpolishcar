          <h1  style=" font-family: 'Cairo', sans-serif; text-align: center;">
              صفحة الاحصاء         
          </h1>
     
        </section>

        <!-- Main content -->
        <section class="content">
       
          <div class="row">
           
            <div class="col-md-6">
              <!-- LINE CHART -->
             
              <!-- BAR CHART -->
              <div class="box box-success">
                <div class="box-header">
                    <h5   style="text-align: center; font-family: 'Cairo', sans-serif;">الاحصاء حسب الاعوام</h5>
                </div>
                <div class="box-body chart-responsive">
                  <div class="chart" id="bar-chart" style="height: 300px;"></div>
                </div><!-- /.box-body -->
              </div><!-- /.box -->

            </div><!-- /.col (RIGHT) -->

            <div class="col-md-6">
                <!-- LINE CHART -->
               
                <!-- BAR CHART -->
                <div class="box box-success">
                  <div class="box-header">
                    <h5   style="text-align: center;font-family: 'Cairo', sans-serif;">اعمدة بيانية</h5>
                  </div>
                  <div class="box-body chart-responsive">
                      <div style="overflow-x:auto; direction: rtl; " >
                          <table   >
                            <tr>
                              <th>السنة</th>
                              <th>المدخول المالي</th> 
                              <th> المخروج المالي</th>
                              <th>  الفوائد</th>
                              <th>  رابط الصفحة</th>
                            </tr>
                            <% for (var i = 0 ; i < funding.year.length ; i++) { %>
                            <tr >  
                              <td> <%= funding.year[i].Year %></td>
                              <td> <%= funding.year[i].FinancialIncomeYear.toFixed(2) %></td>
                              <td> <%= funding.year[i].FinancialExitYear.toFixed(2) %></td>
                              <% var Def =  funding.year[i].FinancialIncomeYear  - funding.year[i].FinancialExitYear %>
                              <td> <%= Def.toFixed(2) %></td>
                              <td><button class="btn btn-default"  style="border-color: rgba(0, 0, 0, 0.322);width: 128px"  type="button" onclick="window.location.href='/client/funding-month/<%= funding.year[i]._id %>'"> <i class="fas fa-link"></i>  رابط الصفحة</button></td>
  
                            </tr>
                        <% } %>
                          </table>
                        </div>
                  </div><!-- /.box-body -->
                </div><!-- /.box -->
  
              </div><!-- /.col (RIGHT) -->
            
